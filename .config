# =========================================================
# 目标硬件平台配置 (CMIOT AX18 / IPQ60xx) 
# =========================================================
CONFIG_TARGET_qualcommax=y
CONFIG_TARGET_qualcommax_ipq60xx=y
CONFIG_TARGET_qualcommax_ipq60xx_DEVICE_cmiot_ax18=y

# 必须保留的板级数据 (保证 MAC 地址及引导正常) 
CONFIG_PACKAGE_ipq-wifi-cmiot_ax18=y

# =========================================================
# 1. 语言设置 (全量汉化) 
# =========================================================
CONFIG_LUCI_LANG_zh_Hans=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-i18n-firewall-zh-cn=y
CONFIG_PACKAGE_luci-i18n-upnp-zh-cn=y
CONFIG_PACKAGE_luci-i18n-opkg-zh-cn=y
CONFIG_PACKAGE_luci-i18n-ttyd-zh-cn=y

# =========================================================
# 2. 彻底禁用无线功能 (解决 hostapd 报错) 
# =========================================================
# CONFIG_PACKAGE_kmod-ath11k is not set
# CONFIG_PACKAGE_kmod-mac80211 is not set
# CONFIG_PACKAGE_wpad-openssl is not set
# CONFIG_PACKAGE_hostapd-common is not set

# =========================================================
# 3. NSS 硬件加速驱动 
# =========================================================
CONFIG_PACKAGE_kmod-qca-nss-drv=y
CONFIG_PACKAGE_kmod-qca-nss-ecm=y
CONFIG_PACKAGE_kmod-qca-nss-drv-pppoe=y
CONFIG_NSS_DRV_IGS_ENABLE=y
CONFIG_NSS_FIRMWARE_VERSION_12_2=y

# =========================================================
# 4. 网络与 IPv6 
# =========================================================
CONFIG_IPV6=y
CONFIG_PACKAGE_ipv6helper=y
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_odhcpd-ipv6only=y
CONFIG_DEFAULT_lan_ipaddr="192.168.0.1" 

# =========================================================
# 5. OpenClash 及其加密依赖 (精简模式) 
# =========================================================
CONFIG_PACKAGE_luci-app-openclash=y
CONFIG_PACKAGE_luci-app-openclash_INCLUDE_Clash=n
CONFIG_PACKAGE_luci-app-openclash_INCLUDE_Clash_Admon=n
CONFIG_PACKAGE_kmod-tun=y
CONFIG_PACKAGE_kmod-crypto-aead=y
CONFIG_PACKAGE_kmod-crypto-lib-chacha20poly1305=y

# =========================================================
# 6. 基础界面与系统工具 
# =========================================================
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-compat=y
CONFIG_PACKAGE_luci-app-upnp=y
CONFIG_PACKAGE_luci-app-ttyd=y
CONFIG_OPKG_USE_CURL=y
CONFIG_PACKAGE_ca-certificates=y
