# 目标硬件平台配置
CONFIG_TARGET_qualcommax=y
CONFIG_TARGET_qualcommax_ipq60xx=y
CONFIG_TARGET_qualcommax_ipq60xx_DEVICE_cmiot_ax18=y

# 1. 彻底移除无线相关组件 (显式禁用以覆盖默认依赖)
CONFIG_PACKAGE_kmod-ath11k=n
CONFIG_PACKAGE_kmod-ath11k-ahb=n
CONFIG_PACKAGE_kmod-ath11k-pci=n
CONFIG_PACKAGE_kmod-mac80211=n
CONFIG_PACKAGE_kmod-cfg80211=n
CONFIG_PACKAGE_kmod-ath=n
CONFIG_PACKAGE_wpad-openssl=n
CONFIG_PACKAGE_wpad-basic-wolfssl=n
CONFIG_PACKAGE_hostapd-common=n
CONFIG_PACKAGE_wireless-regdb=n
CONFIG_PACKAGE_wifi-scripts=n
CONFIG_PACKAGE_ipq-wifi-cmiot_ax18=n
CONFIG_PACKAGE_ath11k-firmware-ipq6018=n

# --- 新增：彻底消灭残留的核心配置 ---
CONFIG_PACKAGE_kmod-qca-nss-drv-wifi-meshmgr=n
CONFIG_PACKAGE_libiwinfo=n
CONFIG_PACKAGE_libiwinfo-data=n
CONFIG_PACKAGE_libiwinfo-lua=n
CONFIG_PACKAGE_rpcd-mod-iwinfo=n
# --------------------------------

# 2. NSS 硬件加速驱动 (强制对齐 11.4 版本)
CONFIG_NSS_FIRMWARE_VERSION_11_4=y
CONFIG_PACKAGE_kmod-qca-nss-drv=y
CONFIG_PACKAGE_kmod-qca-nss-ecm=y
CONFIG_PACKAGE_kmod-qca-nss-drv-pppoe=y
CONFIG_PACKAGE_kmod-qca-nss-drv-vlan-mgr=y
CONFIG_PACKAGE_kmod-qca-nss-drv-bridge-mgr=y
CONFIG_PACKAGE_kmod-qca-nss-drv-ipv6=y
CONFIG_NSS_DRV_DEBUGFS_ENABLE=y

# 3. LuCI 界面与全量中文语言包
CONFIG_LUCI_LANG_zh_Hans=y
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-compat=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-i18n-firewall-zh-cn=y
CONFIG_PACKAGE_luci-i18n-package-manager-zh-cn=y
CONFIG_PACKAGE_luci-i18n-ttyd-zh-cn=y
CONFIG_PACKAGE_luci-i18n-upnp-zh-cn=y

# 4. 其他常用工具
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_bash=y
CONFIG_PACKAGE_ttyd=y
CONFIG_PACKAGE_luci-app-ttyd=y
CONFIG_PACKAGE_luci-app-openclash=y
CONFIG_PACKAGE_luci-app-upnp=y
